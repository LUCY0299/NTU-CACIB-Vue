in-right: 15px;\r\n}\r\n\r\n.logo h1 {\r\n  font-size: 1.3rem; /* 稍微調整字體大小 */\r\n  color: #ffffff; /* 根據圖片將文字改為白色 */\r\n  font-weight: 500;\r\n  margin: 0;\r\n}\r\n\r\nnav ul {\r\n  list-style: none;\r\n  display: flex;\r\n  align-items: center;\r\n  margin: 0;\r\n  padding: 0;\r\n}\r\n\r\nnav li {\r\n  margin-left: 30px; /* 稍微增加間距 */\r\n}\r\n\r\nnav a {\r\n  text-decoration: none;\r\n  color: #e0e0e0; /* 將文字改為淺灰色 */\r\n  font-size: 1rem;\r\n  font-weight: 500;\r\n  transition: color 0.3s;\r\n  display: flex;\r\n  align-items: center;\r\n}\r\n\r\nnav a:hover {\r\n  color: #ffffff; /* 滑鼠懸停時變為純白 */\r\n}\r\n\r\n/* [新增處] 增加下拉箭頭的樣式 */\r\n.arrow-down {\r\n  border: solid #e0e0e0;\r\n  border-width: 0 2px 2px 0;\r\n  display: inline-block;\r\n  padding: 3px;\r\n  transform: rotate(45deg);\r\n  -webkit-transform: rotate(45deg);\r\n  margin-left: 8px;\r\n  transition: border-color 0.3s;\r\n}\r\n\r\nnav a:hover .arrow-down {\r\n    border-color: #ffffff;\r\n}\r\n\r\n/* [新增處] 搜尋圖示的樣式 */\r\n.search-icon {\r\n    color: #e0e0e0;\r\n    cursor: pointer;\r\n    transition: color 0.3s;\r\n    margin-left: 20px;\r\n}\r\n\r\n.search-icon:hover {\r\n    color: #ffffff;\r\n}\r\n</style>"],"mappings":"AA8BA,eAAe;EACbA,IAAI,EAAE;AACR","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}