 <div class=\"accordion-header\" @click=\"toggleSection(index)\">\n              {{ section.title }}\n            </div>\n            <div class=\"accordion-content\" v-show=\"activeIndex === index\">\n              <p>{{ section.content }}</p>\n            </div>\n          </div>\n        </div>\n\n        <!-- 線性左右佈局區塊 -->\n        <div class=\"info-sections\">\n          \n          <!-- 區塊一：研討會報名 -->\n          <section class=\"info-section\">\n            <div class=\"info-text\">\n              <h4>研討會報名 <span class=\"en-text\">registration</span></h4>\n              <a :href=\"info.registration.url\" target=\"_blank\" class=\"link\">{{ info.registration.url }}</a>\n            </div>\n            <div class=\"info-media\">\n              <img :src=\"getImageUrl(info.registration.qrCode)\" alt=\"Registration QR Code\" class=\"qr-code\">\n            </div>\n          </section>\n\n          <!-- 區塊二：學生海報投稿 -->\n          <section class=\"info-section\">\n            <div class=\"info-text\">\n              <h4>學生海報投稿</h4>\n              <ol class=\"poster-steps\">\n                <li v-for=\"step in info.poster.steps\" :key=\"step\">{{ step }}</li>\n              </ol>\n            </div>\n            <div class=\"info-media poster-downloads\">\n              <img :src=\"getImageUrl(info.poster.qrCode)\" alt=\"Poster Submission QR Code\" class=\"qr-code\">\n              <a :href=\"getAssetUrl(info.poster.templateFile)\" download class=\"file-download\">\n                <img :src=\"getImageUrl(info.poster.templatePreview)\" alt=\"Poster Template Preview\">\n                <span>{{ info.poster.templateName }}</span>\n              </a>\n            </div>\n          </section>\n\n          <!-- 區塊三：地點與主辦資訊 -->\n          <section class=\"info-section\">\n            <div class=\"info-media\">\n              <div class=\"map-container\">\n                <iframe :src=\"info.location.mapUrl\" width=\"100%\" height=\"100%\" style=\"border:0;\" allowfullscreen=\"\" loading=\"lazy\" referrerpolicy=\"no-referrer-when-downgrade\"></iframe>\n              </div>\n            </div>\n            <div class=\"info-text host-info\">\n              <p class=\"conference-dates\">{{ info.host.dates }}</p>\n              <p class=\"conference-venue\">{{ info.host.venue }}</p>\n              <p class=\"host-by\">Host by:</p>\n              <ul class=\"host-list\">\n                <li v-for=\"host in info.host.hosts\" :key=\"host\">{{ host }}</li>\n              </ul>\n            </div>\n          </section>\n\n        </div>\n      </div>\n    </main>\n  </div>\n</template>\n\n<script>\nexport default {\n  name: 'IcqabView',\n  data() {\n    return {\n      activeIndex: null,\n      sections: [\n        {\n          title: 'About the Conference',\n          content: 'This is a conference about drought, climate change and water sustainability. We aim to bring together leading academic scientists, researchers and research scholars to exchange and share their experiences and research results on all aspects of Drought, Climate Change and Water Sustainability.'\n        },\n        {\n          title: 'Call for Papers',\n          content: 'We invite submissions of original research papers on a wide range of topics related to the conference themes. All submitted papers will be peer-reviewed. Accepted papers will be published in the conference proceedings.'\n        },\n        {\n          title: 'Keynote Speakers',\n          content: 'We have a lineup of world-renowned keynote speakers who are experts in the fields of climate change, water management, and sustainable agriculture. Stay tuned for the announcement of our speakers.'\n        }\n      ],\n      info: {\n        registration: {\n          url: 'https://www.icdcws2025.org/registration',\n          qrCode: 'registration-qr.png'\n        },\n        poster: {\n          steps: [\n            '1. Download the poster template.',\n            '2. Prepare your poster according to 